{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["chrome", "vite/client"],
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["apps/extension/src/**/*.ts", "apps/extension/src/**/*.tsx"],
  "exclude": [
    "apps/extension/src/**/*.test.ts",
    "apps/extension/src/**/*.test.tsx",
    "apps/extension/src/**/__tests__/**"
  ]
}
