{
  "name": "Wandok",
  "description": "Perfect Reading Experience Assistant",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "logo.png",
      "32": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://localhost:*/*"]
}
